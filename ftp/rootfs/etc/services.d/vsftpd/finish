#!/command/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: FTP
# Take down the S6 supervision tree when vsftpd fails
# ==============================================================================
if [[ "${1}" -ne 0 ]] && [[ "${1}" -ne 256 ]]; then
  bashio::log.warning "vsftpd crashed, halting add-on"
  /run/s6/basedir/bin/halt
fi

bashio::log.info "vsftpd stoped, restarting..."
